<%= form_for(@user_session) do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h5 style="color: rgb(185, 74, 72);text-shadow: 1px 1px 1px rgb(0, 0, 0);">Logowanie nie powiodło się, popraw błędy i spróbuj ponownie.</h5><br /><br />
      <ul style="height:30px;">
      <% @user_session.errors.full_messages.each do |msg| %>
        <li style="margin-top:-35px;"><div class="alert-error"><%= msg %></div></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br />
<center>
  <div class="field input-prepend" style="display:inline-block">
    <%= f.label :Nazwa_użytkownika %>
    <span class="add-on"><i class="icon-user"></i></span><%= f.text_field :username %>
  </div>
  <div class="field input-prepend" style="display:inline-block">
    <%= f.label :hasło %>
    <span class="add-on"><i class="icon-lock"></i></span><%= f.password_field :password %>
  </div>
</center>
<br />
  <div class="actions">
     <button type="submit" class="btn btn-primary">
  	<i class="icon-ok"></i> Zaloguj
     </button>
  </div>
<% end %>
