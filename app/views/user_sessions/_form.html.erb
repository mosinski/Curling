<%= form_for(@user_session, html: {class: "form-horizontal"}) do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h5 style="color: rgb(185, 74, 72);text-shadow: 1px 1px 1px rgb(0, 0, 0);">Logowanie nie powiodło się, popraw błędy i spróbuj ponownie.</h5><br /><br />
      <ul style="height:30px;">
        <% @user_session.errors.full_messages.each do |msg| %>
          <li style="margin-top:-35px;">
            <div class="alert-error" style="padding:10px;">
              <i class="icon icon-warning-sign"></i>
              <%= msg %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br />
  <div class="form-group">
    <%= f.label :username, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <div class="input-group col-xs-8">
        <span class="input-group-addon">
          <i class="fa fa-user"></i>
        </span>
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <div class="input-group col-xs-8">
        <span class="input-group-addon">
          <i class="fa fa-lock"></i>
        </span>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <label class="checkbox">
        <%= f.check_box :remember_me, :title => 'Zapamiętaj Mnie', :id => 'zapamietaj_mnie' %> 
        <%= f.label :remember_me %>
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= button_tag(type: "submit", class: "btn btn-primary") do %>
        <i class="glyphicon glyphicon-check"></i> <%= f.label :login, "style"=>"display:inline", "onclick" => "document.getElementById('new_user_session').submit()" %>
      <% end %>
    </div>
  </div>
<% end %>
