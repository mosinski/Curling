<%= form_for(@user_session, html: {class: "form-horizontal"}) do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h5 style="color: rgb(185, 74, 72);text-shadow: 1px 1px 1px rgb(0, 0, 0);">Logowanie nie powiodło się, popraw błędy i spróbuj ponownie.</h5><br /><br />
      <ul style="height:30px;">
        <% @user_session.errors.full_messages.each do |msg| %>
          <li style="margin-top:-35px;">
            <div class="alert-error" style="padding:10px;">
              <i class="icon icon-warning-sign"></i>
              <%= msg %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br />
  <div class="control-group">
    <%= f.label :username, class: "control-label" %>
    <div class="controls">
      <div class="field input-prepend">
        <span class="add-on">
          <i class="icon-user"></i>
        </span>
        <%= f.text_field :username %>
      </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, class: "control-label" %>
    <div class="controls">
      <div class="field input-prepend">
        <span class="add-on">
          <i class="icon-lock"></i>
        </span>
        <%= f.password_field :password %>
      </div>
    </div>
  </div>
  <br />
  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= f.check_box :remember_me, :title => 'Zapamiętaj Mnie', :id => 'zapamietaj_mnie' %> 
        <%= f.label :remember_me %>
      </label>

      <%= button_tag(type: "submit", class: "btn btn-primary") do %>
        <i class="icon-ok"></i> <%= f.label :login, "style"=>"display:inline", "onclick" => "document.getElementById('new_user_session').submit()" %>
      <% end %>
    </div>
  </div>
<% end %>
