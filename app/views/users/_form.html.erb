 <% if @user.errors.any? %>
    <div id="error_explanation">
    <% if  (@user.errors.count) == 1  %>
      <h4>Użytkownik nie został stworzony z powodu jednego błędu</h4>
    <% elsif (@user.errors.count) > 1 %>
        <h4>Użytkownik nie został stworzony z powodu <%= @user.errors.count %> błędów</h4>
    <% end %>
      <ul style="background:none repeat scroll 0% 0% rgb(245, 245, 245);padding:10px;">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="controls">
	<div class="field input-prepend">
  		<%= f.label :username %>
  		<span class="add-on"><i class="icon-user"></i></span>
  		<%= f.text_field :username, :placeholder => "jkowalski" %>
	</div>
</div>

<div class="controls">
	<div class="field input-prepend">
  		<%= f.label :name_surname %>
  		<span class="add-on"><i class="icon-user"></i></span>
  		<%= f.text_field :name_surname, :placeholder => "Jan Kowalski" %>
	</div>
</div>

<div class="controls">
	<div class="field input-prepend">
    		<%= f.label :born %>
  		<span class="add-on"><i class="icon-calendar"></i></span>
    		<%= f.date_select :born, :order => [:day, :month, :year], :start_year => 1920, :end_year => Time.now.year, "style" => "width:50px"  %>
	</div>
</div>

<div class="controls">
	<div class="field input-prepend">
  		<%= f.label :email %>
  		<span class="add-on">@</span>
		<%= f.text_field :email, :placeholder => "jkowalski@gmail.com" %>
	</div>
</div>

<div class="controls">
	<div class="field input-prepend">
  		<%= f.label :pesel %>
  		<span class="add-on"><i class="icon-map-marker"></i></span>
  		<%= f.number_field :pesel, :placeholder => "88062542184" %>
	</div>
</div>

<div class="controls">
	<div class="field input-prepend">
  		<%= f.label :password %>
  		<span class="add-on"><i class="icon-lock"></i></span>
		<%= f.password_field :password, :placeholder => "******" %>
	</div>
</div>

<div class="password_oblicz">
	<span id="password_time"></span>
</div>

<div class="controls">
	<div class="field input-prepend">
  		<%= f.label :password_confirmation %>
  		<span class="add-on"><i class="icon-lock"></i></span>
		<%= f.password_field :password_confirmation, :placeholder => "******" %>
	</div>
</div>
