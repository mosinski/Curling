<h3>Lista Użytkowników</h3>
 
<table class="table">
<tr>
<th>Nick</th>
<th>Email</th>
<th>Zakceptowany</th>
<th></th>
<th></th>
<th></th>
<th></th>
</tr>
 
<% @users.each do |user| %>
<tr>
<td><%= user.username %></td>
<td align="center"><%= user.email %></td>
<td align="center">
    <% if user.potwierdzenie == 1 %> 
	Tak 
    <% elsif user.potwierdzenie == 0 %> 
	Nie 
    <% end %>
</td>
<td>
    <% if user.potwierdzenie == 1 %>
	<%= link_to({:controller => "users", :action => "odwolaj", :id => user.id}, {:class => "btn btn-small btn-danger"}) do %>
  		<i class="icon-thumbs-down"></i> Odwołaj
	<% end %>
    <% elsif user.potwierdzenie == 0 %> 
	<%= link_to({:controller => "users", :action => "potwierdz", :id => user.id}, {:class => "btn btn-small btn-success"}) do %>
  		<i class="icon-thumbs-up"></i> Potwierdź
	<% end %>
    <% end %>
</td>
<td>
<%= link_to user, :class => "btn btn-small btn-primary" do %>
  <i class="icon-eye-open"></i> Pokaż
<% end %>
</td>
<td>
<%= link_to edit_user_path(user), :class => "btn btn-small btn-inverse" do %>
  <i class="icon-edit"></i> Edytuj
<% end %>
</td>
<td>
<%= link_to user, :confirm => "Czy napewno chcesz usunąć użytkownika #{user.username}?", :method => :delete, :class => "btn btn-small btn-danger" do %>
  <i class="icon-trash"></i> Usuń
<% end %>
</td>
</tr>
<% end %>
</table>
