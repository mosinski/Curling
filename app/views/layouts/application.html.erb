									<%= link_to("http://www.zpcbaltyk.pl/", "target"=>"_blank") do %>
										<%= image_tag("baltyk.jpg") %>
									<% end %>
									</div>
									<div>
									<%= link_to("http://cukierniawz.pl/", "target"=>"_blank") do %>
										<%= image_tag("cukiernia.jpg") %>
