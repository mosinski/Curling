                <%= t 'navi_about_info' %>
              <% end %>
            </li>
          </ul>
				</li>
				<li class="style3"><a href="/news"><span><%= t 'navi_news' %></span></a></li>
				<li class="style5"><a href="/galeria"><span><%= t 'navi_gallery' %></span></a></li>
				<li class="style4"><a href="/kontakt"><span><%= t 'navi_contact' %></span></a></li>
			</ul>
		</div>
		<div class="logo">
			<div class="napis">
			Gdańsk<br>
			Curling<br>
			Club
			</div>
			<a href="/">
				<%= image_tag("logo.gif") %>
			</a>
		</div>
	</div>
<!-- FB LIKE BOX i Google BOX-->
  <div class="abtgbox">
    <div>
    <div class="g-person" data-width="273" data-href="//plus.google.com/103973029720134167563" data-layout="landscape" data-rel="author">
    </div>
    </div>
  </div>
  <div class="abtlikebox">
   <div>
     <iframe src="http://www.facebook.com/plugins/likebox.php?href=https://www.facebook.com/pages/Gda%C5%84sk-Curling-Club/158911320799558&amp;width=245&amp;colorscheme=light&amp;show_faces=true&amp;border_color=white&amp;connections=9&amp;stream=false&amp;header=false&amp;height=270" scrolling="no" frameborder="0" scrolling="no" style="border: white; overflow: hidden; height: 270px; width: 245px;background:#fafafa;"></iframe>
   </div>
  </div>

<!-- CONTENT -->
	<div id="content">
		<div class="wrapper">
		
			<%= render 'layouts/notice' %>

			<div align="right" style="margin-top: 5px;">
        <div style="display:inline;float:left;margin-left:8px;">
          <%= link_to '/news.atom', :class => "btn btn-mini btn-warning" do %>
            <i class="icon-rss"></i> <%= t 'navi_news' %>
          <% end %>
          
          <% if current_user %>
            <%= link_to '/dashboards.atom', :class => "btn btn-mini btn-warning" do %>
              <i class="icon-rss"></i> Aktualności Klubowe
            <% end %>
          <% end %>
          
          <%= link_to '/rss_comments.atom', :class => "btn btn-mini btn-warning" do %>
            <i class="icon-rss"></i> <%= t 'comments' %>
          <% end %>
        </div>
        <% if I18n.locale == I18n.default_locale %>
          <%= image_tag("flag_pl.png", :class=>"btn btn-mini disabled", :title => "Polski") %>
          <%= link_to :locale=>'en' do %>
            <%= image_tag("flag_en.png", :class=>"btn btn-mini", :title => "English") %>
          <% end %>
        <% else %>
          <%= link_to :locale=>'pl' do %>
            <%= image_tag("flag_pl.png", :class=>"btn btn-mini", :title => "Polski") %>
          <% end %>
          <%= image_tag("flag_en.png", :class=>"btn btn-mini disabled", :title => "English") %>
        <% end %>
        <div style="display:inline-block;width:200px;margin-right:10px;">
          <%= t 'visits' %>: 
          <img src="http://www.darmowylicznik.pl/licznik.php?id=87854" alt="Darmowy licznik odwiedzin" style="border:0px; width:100px; height:20px;margin:-2px -35px;">
          <script language="JavaScript">var adpol='<counter absolute;top:-1000px;">';var adpol2=adpol.replace('counter','div style="position:'); document.write(adpol2);</script>
          <script language="JavaScript"> document.write('</div>') </script>
        </div>
        <%= t 'today' %>: <%= I18n.l Time.now, :format => "%A, %d %B, %Y" %>
      </div>
			<br>
			<div class="col-1" style="margin-top:-10px">
        <!-- LOGIN USER SIDE MENU -->
			  <% if current_user %>
			    <div class="tabbable tabs-left adminpanel">
            <ul class="nav nav-tabs">
              <% if current_page?("/") %>
                <li class="active">
              <% else %>
                <li>
              <% end %>
              <a href="/"><i class="icon-home"></i> Start</a>
              </li>

              <% if current_page?(user_messages_path(current_user)) %>
                <li class="active">
              <% else %>
                <li>
              <% end %>
              <%= link_to user_messages_path(current_user) do %>
              <i class="icon-inbox"></i> Skrzynka 
              <% if current_user.unread_messages? %>
                (<%= current_user.unread_message_count %>)
                <% end %>
              <% end %>
              </li>

              <% if current_page?(user_messages_path(current_user, :mailbox => :sent)) %>
                <li class="active">
              <% else %>
                <li>
              <% end %>
              <%= link_to user_messages_path(current_user, :mailbox => :sent) do %>
                <i class="icon-envelope"></i> Wysłane
              <% end %>
              </li>

              <% if current_page?("/users") %>
                <li class="active">
              <% else %>
                <li>
              <% end %>
              <%= link_to users_path do %>
                <i class="icon-group"></i> Użytkownicy
              <% end %>
              </li>

              <% if current_page?(dashboards_path) %>
                <li class="active">
              <% else %>
                <li>
              <% end %>
              <%= link_to dashboards_path do %>
                <i class="icon-info-sign"></i> Inf. Klubowe
              <% end %>
              </li>

              <% if current_user.role == "admin" %>
                <% if current_page?("/admin_panel") %>
                  <li class="active">
                <% else %>
                  <li>
                <% end %>
                <%= link_to "/admin_panel" do %>
                  <i class="icon-wrench"></i> Ustawienia
                <% end %>
              <% end %>
              </li>
            </ul>
          </div>
        <% end %>
        <!-- END LOGIN USER SIDE MENU -->
				<br>
				<div class="box">
					<div class="border-top">
						<div class="left-top-corner">
							<div class="right-top-corner">
								<div class="inner">
								<h3>Newsletter:</h3>
								<a class="info-box" data-placement="top" rel="tooltip" title="<%= t('tooltip.newsletter') %>">
								<i class="icon-question-sign"></i>
								</a>
								<div class="center text-center">
									
 									<div class="input-prepend"><span class="add-on"><i class="icon-envelope-alt"></i></span>
