<h3><i class="icon-trophy"></i> <%= @tournament.nazwa %> (<%= distance_of_time_in_words(@tournament.termin_start, @tournament.termin_end+1) %>)</h3>

<p>
  <div style="display:inline-block">
    <i class="icon-flag-alt"></i> <b>Start:</b>
    <%=I18n.l @tournament.termin_start, :format => "%d %B %Y" %>
  </div>

  <div style="display:inline-block;float:right;">
    <i class="icon-flag-checkered"></i> <b>Koniec:</b>
    <%=I18n.l @tournament.termin_end, :format => "%d %B %Y" %>
  </div>
</p>

  <div class="redactor_editor">
    <% if (I18n.locale == I18n.default_locale) || (I18n.locale != I18n.default_locale && @tournament.opis_en.size < 15) %>
      <%= raw(@tournament.opis_pl) %>
    <% else %>
      <%= raw(@tournament.opis_en) %>
    <% end %>
  </div> 

<br>

<% if current_user && current_user.role=="admin" %>
<%= link_to edit_tournament_path(@tournament),:class => "btn btn-small btn-primary" do %>
	<i class="icon-share-alt"></i> Edytuj Turniej Klubowy
<% end %>
<% end %>
